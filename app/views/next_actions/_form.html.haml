= form_for([@project, @next_action], html: {class: 'form-horizontal'}) do |f|
  - if @next_action.errors.any?
    #errorExplanation.alert-message.block-message.error
      %h2= "#{pluralize(@next_action.errors.count, 'error')} prohibited this next_action from being saved:"
      %ul
        - @next_action.errors.full_messages.each do |msg|
          %li= msg
 
  %fieldset
    %legend Action Description 
    .control-group
      = f.label :name, class: 'control-label'
      .controls
        = f.text_field :name
    .control-group
      = f.label :due, class: 'control-label'
      .controls
        = f.text_field :due
        = f.hidden_field :project_id
    .form-actions
      = f.submit 'Submit', class: 'btn btn-primary'
